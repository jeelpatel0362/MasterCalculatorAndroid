<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/BorderBtn">
        <shape android:shape="rectangle">
            <solid android:color="@color/jordy_blue"/>
            <corners android:radius="20dp"/>
        </shape>

    </item>

    <item android:id="@+id/btnContent">
        <shape android:shape="rectangle">

            <solid android:color="@color/jordy_blue"/>
            <corners android:radius="20dp"/>
            <stroke android:color="@color/jordy_blue" android:width="2px"/>
        </shape>
    </item>
</layer-list>